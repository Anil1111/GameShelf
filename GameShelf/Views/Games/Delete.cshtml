@model GameShelf.Models.GameWithPersonInfo

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Game</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PlayTime.PlayTimeCategory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PlayTime.PlayTimeCategory)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MinPlayers)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MinPlayers)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaxPlayers)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaxPlayers)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Designers)
        </dt>
        <dd>
          @Html.Raw(String.Join("<br>", Model.Designers.Select(d => d.FullName)))
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Owners)
        </dt>
        <dd>
            @Html.Raw(String.Join("<br>", Model.Owners.Select(o => o.FullName)))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" autofocus class="btn btn-default" /> |
        <a asp-action="Index">Back to My Games</a>
    </form>
</div>
