@model GameShelf.Models.ViewModels.GameEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Game</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="GameWithPersonInfo.ID" />

            @Html.Partial("GameEditCreatePartial")

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to My Games</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}