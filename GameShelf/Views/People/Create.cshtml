@model GameShelf.Models.ViewModels.PersonCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add a New Person to the Database</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.GameID" />

            <div class="form-group">
                <label asp-for="@Model.Person.FirstName" class="control-label"></label>
                <input asp-for="@Model.Person.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Person.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Person.LastName" class="control-label"></label>
                <input asp-for="@Model.Person.LastName" class="form-control" />
                <span asp-validation-for="@Model.Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Games" asp-action="Edit" asp-route-id="@Model.GameID">Return to Game Edit Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
